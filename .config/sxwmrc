# Floating/Fullscreen
call : mod + space : toggle_floating
#call : mod + shift + space : global_floating
call : mod + f : fullscreen

scratchpad : mod + minus : create 1
scratchpad : mod + equal : toggle 1
scratchpad : mod + shift + equal : remove 1


