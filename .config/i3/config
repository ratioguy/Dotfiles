# Startup applications
exec --no-startup-id sh ~/.local/bin/startup.sh
#exec --no-startup-id sh ~/.local/bin/monitor.sh

# Set font 
font pango:LiterationMono Nerd Font 10

# Set win+drag key
floating_modifier Mod4

# Gaps size
gaps inner 5
gaps outer 5

# Outline
for_window [class="^.*"] border pixel 3

# Class
client.focused #d79920 #d79920 #ffffff #d79920   #d79920

# Floating apps
for_window [instance="mupdf"] floating enable, move position center
for_window [instance="imv"] floating enable, move position center
for_window [class="mpv"] floating enable, resize set 1280 720, move position center
for_window [window_type="dialog"] floating enable, move position center
for_window [title="youtube-launcher"] floating enable, resize set 700 50, move position center
for_window [title="gimp-file-open"] floating enable, resize 500 500, move position center
for_window [title="pulsemixer"] floating enable, resize 500 500, move position center
for_window [title="Thunar"] floating enable, resize 1280 720, move position center
