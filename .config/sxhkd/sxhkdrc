# Refresh confs
super + Escape 
  pkill -USR1 -x sxhkd

super + shift + c
  i3-msg reload

# App/script binds
super + Return
 st & sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + b
  flatpak run io.gitlab.librewolf-community ; sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + e
  st -e lf & ; sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + m
  st -e ncmpcpp & ; sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + n
  st -e newsboat & ; sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + t
  st -e htop & ; sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + u
  st -t pulsemixer -e pulsemixer & ; sleep ; sh ~/.local/bin/i3-mouse-warping

super + v 
  xfce4-popup-clipman

super + y
  st -T youtube-launcher -e sh ~/.local/bin/youtube-launcher.sh

# Volume control
XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + w
  pactl set-sink-volume @DEFAULT_SINK@ +5%

super + s
  pactl set-sink-volume @DEFAULT_SINK@ -5%

super + shift + s
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + o
  pactl set-default-sink alsa_output.usb-HP_HP_Speaker_Bar-00.analog-stereo

super + shift + o
  pactl set-default-sink alsa_output.pci-0000_00_1f.3.analog-stereo 

# Screenshot Control
Print
  xfce4-screenshooter

super + p
  xfce4-screenshooter

super + shift + p
   xfce4-screenshooter -f -s ~/Pictures/Screenshots

# Launcher binds
super + d
  rofi -show drun ; sleep 0.15 ; sh ~/.local/bin/i3-mouse-warping.sh

super + shift + d
  rofi -show power-menu -modi power-menu:./.local/bin/rofi-power-menu

super + Tab
  rofi -show window ; sleep 0.20 ; sh ~/.local/bin/i3-mouse-warping.sh

# Window control binds
super + q
  i3-msg kill ; sleep 0.01 ; sh ~/.local/bin/i3-mouse-warping.sh

super + {h,j,k,l}
  i3-msg focus {left,down,up,right} ; sh ~/.local/bin/i3-mouse-warping.sh
  
super + shift + {h,j,k,l} 
  i3-msg move {left,down,up,right} ; sh ~/.local/bin/i3-mouse-warping.sh

super + alt + {h,j,k,l}
  sh ~/.local/bin/i3resize.sh {left,down,up,right} ; sh ~/.local/bin/i3-mouse-warping.sh

super + i
  i3-msg focus floating ; sh ~/.local/bin/i3-mouse-warping.sh

super + shift + i
  i3-msg focus tiling ; sh ~/.local/bin/i3-mouse-warping.sh

super + f
  i3-msg fullscreen ; sh ~/.local/bin/i3-mouse-warping.sh

super + space
  i3-msg floating toggle ; sh ~/.local/bin/i3-mouse-warping.sh

super + c
  i3-msg floating enable ; i3-msg resize set 1270 720 ; i3-msg move container position center ; sh ~/.local/bin/i3-mouse-warping.sh

super + z
  i3-msg split horizontal

super + x
  i3-msg split vertical

super + minus
  i3-msg move scratchpad ; sh ~/.local/bin/i3-mouse-warping.sh

super + equal
  i3-msg scratchpad show ; sh ~/.local/bin/i3-mouse-warping.sh 

super + g
  i3-msg gaps inner all toggle 5 ; i3-msg gaps outer all toggle 5 ; sh ~/.local/bin/i3-mouse-warping.sh


# Music control
super + backslash
  playerctl play-pause -i firefox

super + bracketleft
  playerctl previous

super + bracketright
  playerctl next

# Workspace binds
super + {1-9,0}
  i3-msg workspace number {1-9,10} ; sh ~/.local/bin/i3-mouse-warping.sh

super + shift + {1-9,0}
  i3-msg move container workspace number {1-9,10}

super + grave
  i3-msg workspace back_and_forth ; sh ~/.local/bin/i3-mouse-warping.sh
