# Refresh confs
super + Escape 
  pkill -USR1 -x sxhkd

super + shift + c
  i3-msg reload

# App/script binds
super + Return
 st

super + b
  flatpak run io.gitlab.librewolf-community 

super + e
  st -e lf & 

super + m
  st -e ncmpcpp

super + n
  st -e newsboat

super + t
  st -e htop

super + u
  st -t pulsemixer -e pulsemixer

super + v 
  xfce4-popup-clipman

super + y
  st -t youtube-launcher -e sh ~/.local/bin/youtube-launcher.sh

# Volume control
XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + w
  pactl set-sink-volume @DEFAULT_SINK@ +5%

super + s
  pactl set-sink-volume @DEFAULT_SINK@ -5%

super + shift + s
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + o
  pactl set-default-sink alsa_output.usb-HP_HP_Speaker_Bar-00.analog-stereo

super + shift + o
  pactl set-default-sink alsa_output.pci-0000_00_1f.3.analog-stereo 

# Screenshot Control
Print
  xfce4-screenshooter

super + p
  xfce4-screenshooter

super + shift + p
   xfce4-screenshooter -f -s ~/Pictures/Screenshots

# Launcher binds
super + d
  rofi -show drun

super + shift + d
  rofi -show power-menu -modi power-menu:./.local/bin/rofi-power-menu

super + Tab
  rofi -show window 

# Window control binds
super + q
  i3-msg kill 

super + {h,j,k,l}
  i3-msg focus {left,down,up,right} 
  
super + shift + {h,j,k,l} 
  i3-msg move {left,down,up,right} 

super + alt + {h,j,k,l}
  sh ~/.local/bin/i3resize.sh {left,down,up,right} 

super + i
  i3-msg focus floating 

super + shift + i
  i3-msg focus tiling 

super + f
  i3-msg fullscreen 

super + space
  i3-msg floating toggle 

super + c
  i3-msg floating enable ; i3-msg resize set 1270 720 ; i3-msg move container position center 

super + z
  i3-msg split horizontal

super + x
  i3-msg split vertical

super + minus
  i3-msg move scratchpad 

super + equal
  i3-msg scratchpad show  

super + g
  i3-msg gaps inner all toggle 5 ; i3-msg gaps outer all toggle 5 


# Music control
super + backslash
  playerctl play-pause -i firefox

super + bracketleft
  playerctl previous

super + bracketright
  playerctl next

# Workspace binds
super + {1-9,0}
  i3-msg workspace number {1-9,10} 

super + shift + {1-9,0}
  i3-msg move container workspace number {1-9,10}

super + grave
  i3-msg workspace back_and_forth 
